<Window x:Class="GUI_Kassörska.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_Kassörska"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="1080"
        Width="1920"
        MinHeight="1280"
        MinWidth="800"
        FontFamily="SegoeUI">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Styles\Images.xaml" />
                <ResourceDictionary Source="\Styles\Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource Blue}" />
            <SolidColorBrush x:Key="DarkGreyBrush" Color="{StaticResource DarkGrey}" />
            <SolidColorBrush x:Key="DeepPinkBrush" Color="{StaticResource DeepPink}" />
            <SolidColorBrush x:Key="LightPinkBrush" Color="{StaticResource LightPink}" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.Resources>
            <AlternationConverter x:Key="BackgroundConverter">
                <SolidColorBrush Color="#DFA4BD"/>
                <SolidColorBrush Color="#FFFFFF"/>
            </AlternationConverter>

            <!-- Alternate between colors in orderlists -->
            <Style x:Key="alternateBackgroundcolor" TargetType="{x:Type ListBoxItem}">
                <Setter Property="Background" 
              Value="{Binding RelativeSource={RelativeSource Self},
                     Path=(ItemsControl.AlternationIndex),
                     Converter={StaticResource BackgroundConverter}}"/>
            </Style>
        </Grid.Resources>

        <!-- Grid- och rowdefinitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="63.202"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <!--<Viewbox
            Grid.Column="3"
            Grid.RowSpan="2"
            Stretch="Fill">
            <Image Grid.Row="0" Source="C:\Users\RolfC\Documents\TestGitHub\GUIPizzaPalatset\GUI-Kassörska\GUI-Kassörska\Images\pizzalogga2.png" Width="125" Height="125"/>
        </Viewbox>-->
        <!-- Header -->
        <TextBlock
            FontSize="80"
            Grid.ColumnSpan="10"
            Grid.RowSpan="2"
            HorizontalAlignment="Center">
            PizzaPalatset
        </TextBlock>

        <!-- User: User image, log in, log out -->
        <StackPanel
            Grid.Column="8"
            Grid.ColumnSpan="2"
            Grid.Row="1"
            Orientation="Horizontal">
            <Path 
                Fill="{StaticResource DeepPinkBrush}"
                Data="{StaticResource UserImage}"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>
            <TextBlock
                FontSize="40"
                Padding="5"
                VerticalAlignment="Center">User</TextBlock>
            <Button
                Background="#FFFFFF"
                BorderThickness="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <Path
                Fill="{StaticResource DarkGreyBrush}"
                Data="{StaticResource LogOutImage}"/>
            </Button>
        </StackPanel>

        <!-- Ongoing orders -->
        <TextBlock
            Grid.Column="2"
            Grid.Row="5"
            Grid.ColumnSpan="3"
            VerticalAlignment="Bottom"
            FontSize="45"
            FontWeight="Bold">
            Pågående ordrar
        </TextBlock>
       
        <local:OrderController
            Grid.Column="2"
            Grid.Row="6"
            Grid.ColumnSpan="3"
            Grid.RowSpan="10"
            DataContext="Pågåendeordrar"/>

        <!-- Separating line -->
        <Line
            Grid.Column="5"
            Grid.Row="6"
            Grid.RowSpan="10"
            X1="0" Y1="0"  
            X2="0" Y2="700"  
            Stroke="#707070"  
            StrokeThickness="10" />

        <!-- Ready orders -->
        <TextBlock
            Grid.Column="6"
            Grid.Row="5"
            Grid.ColumnSpan="3"
            VerticalAlignment="Bottom"
            FontSize="45"
            FontWeight="Bold">
            Färdiga ordrar
        </TextBlock>
        <ListBox
            Grid.Column="6"
            Grid.Row="6"
            Grid.ColumnSpan="2"
            Grid.RowSpan="10"
            BorderThickness="0"
            AlternationCount="2"
            ItemContainerStyle="{StaticResource alternateBackgroundcolor}">
            <ListBoxItem
                FontSize="40"
                BorderThickness="0">
                Order 1
            </ListBoxItem>
            <ListBoxItem
                FontSize="40"
                BorderThickness="0">
                Order 2
            </ListBoxItem>
            <ListBoxItem
                FontSize="40"
                BorderThickness="0">
                Order 3
            </ListBoxItem>
            <ListBoxItem
                FontSize="40"
                BorderThickness="0">
                Order 4
            </ListBoxItem>
        </ListBox>
    </Grid>
</Window>