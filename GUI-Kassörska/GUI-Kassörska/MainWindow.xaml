<Window x:Class="GUI_Kassörska.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_Kassörska"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" MinHeight="1280" MinWidth="800" FontFamily="SegoeUI">
    <Grid>
        <Grid.Resources>
            <AlternationConverter x:Key="BackgroundConverter">
                <SolidColorBrush Color="#DFA4BD"/>
                <SolidColorBrush Color="#FFFFFF"/>
            </AlternationConverter>

            <Style x:Key="alternateBackgroundcolor" TargetType="{x:Type ListBoxItem}">
                <Setter Property="Background" 
              Value="{Binding RelativeSource={RelativeSource Self},
                     Path=(ItemsControl.AlternationIndex),
                     Converter={StaticResource BackgroundConverter}}"/>
            </Style>
        </Grid.Resources>

        
        <!-- Grid- och rowdefinitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Logga -->
        
        <!-- Rubrik -->
        <TextBox
            Grid.Column="4"
            FontSize="80"
            Grid.ColumnSpan="3">PizzaPalatset</TextBox>

        <!-- Logga ut -->
        <Button
            Grid.Column="9"
            FontSize="40">Logga ut</Button>
        
        <!-- Pågående ordrar -->
        <TextBlock
            Grid.Column="2"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            VerticalAlignment="Bottom"
            FontSize="45">
            Pågående ordrar
        </TextBlock>
        <ListBox
            Grid.Column="2"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Grid.RowSpan="5"
            BorderThickness="5"
            Padding="5"
            ScrollViewer.CanContentScroll="True"
            AlternationCount="2"
            ItemContainerStyle="{StaticResource alternateBackgroundcolor}">
            <ListBoxItem
                FontSize="40">
                Order 5
            </ListBoxItem>
            <ListViewItem
                FontSize="40">
                Order 6
            </ListViewItem>
            <ListBoxItem
                FontSize="40">
                Order 7
            </ListBoxItem>
        </ListBox>
        
        <!-- Färdiga ordrar -->
        <TextBlock
            Grid.Column="6"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            VerticalAlignment="Bottom"
            FontSize="45">
            Färdiga ordrar
        </TextBlock>
        <ListBox
            Grid.Column="6"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Grid.RowSpan="5"
            BorderThickness="5"
            Padding="5"
            AlternationCount="2"
            ItemContainerStyle="{StaticResource alternateBackgroundcolor}">
            <ListBoxItem
                FontSize="40">
                Order 1
            </ListBoxItem>
            <ListBoxItem
                FontSize="40">
                Order 2
            </ListBoxItem>
            <ListBoxItem
                FontSize="40">
                Order 3
            </ListBoxItem>
            <ListBoxItem
                FontSize="40">
                Order 4
            </ListBoxItem>
        </ListBox>
    </Grid>
</Window>