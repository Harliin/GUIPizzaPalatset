                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <materialDesign:Card Grid.Column="0" Grid.ColumnSpan="4" Margin="5" Background="{x:Null}" BorderBrush="#D70F64" 
                                                     Foreground="#D70F64" UniformCornerRadius="3" BorderThickness="20" materialDesign:ShadowAssist.ShadowDepth="Depth3">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <StackPanel Orientation="Vertical">
