<Window x:Class="GUI_Beställning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_Beställning"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         
        Title="MainWindow" Height="1200" Width="1000">
    <Grid>
    
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1" Height="300" Width="1000" HorizontalAlignment="Right"  
              VerticalAlignment="Bottom" Background="#97AABD">
            <StackPanel>
                        <Button Style="{StaticResource TemplatedButton}" Width="50" Height="50"/>
                    </StackPanel>
        </Grid>

        <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Width="250" Background="#314455">
            <StackPanel>

            </StackPanel>
        </Grid>

        <Button Grid.Column="1" Grid.Row="0" Style="{StaticResource TemplatedButton}" Width="100" Height="100" Background="Red" Content="{materialDesign:PackIcon Kind=About,Size=75}" Foreground="Red"/>
    </Grid>

    
</Window>
